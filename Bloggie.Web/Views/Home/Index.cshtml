
@model Bloggie.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">
                Bloggie is the home to coding blogs covering a vast range of topisc like HTML, CSS, Javascript etc.
            </p>

        </div>
        <div class="col-12 col-lg-6">
            <img src="https://media.istockphoto.com/id/1164357236/it/foto/sviluppo-di-codici-informatici-di-lettura-programmatori-sviluppo-progettazione-e-codifica-di.webp?s=2048x2048&w=is&k=20&c=BNbzkhua54L56oX-W3fs1MI-qaEN-Ya-netOqfBwj7k="
            alt="Bloggie"
            class="d-block mx-lg-auto img-fluid" width="300"
            />
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center mb-5">
        <div class="col-3">
            @if (Model!=null && Model.Tags.Any())
            {
                @foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">@tag.Name</span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model!=null && Model.BlogPosts.Any())
            {
                foreach (var post in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-4">
                        <h2 class="mb-1">@post.Heading</h2>
                        <img src="@post.FeaturedImageUrl" alt="@post.Heading" class="mb-3 d-block img-fluid"/>
                        <p class="mb-1">
                            Author: @post.Author, 
                            Published Date: @post.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-4">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-5">@post.ShortDescription</p>
                        <a class="btn btn-dark " asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@post.UrlHandle">Read More</a>

                        
                    </div>
                }
            }
        </div>
    </div>
</div>